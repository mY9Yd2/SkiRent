<UserControl x:Class="SkiRent.Desktop.Views.Bookings.BookingListView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:SkiRent.Desktop.Views.Bookings"
             xmlns:vm="clr-namespace:SkiRent.Desktop.ViewModels.Bookings"
             d:DataContext="{d:DesignInstance vm:BookingListViewModel}"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">

    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal">

            <Label Content="Foglalások" FontSize="18" />

            <Button Content="Frissítés" Height="20" Width="80" Margin="10,0" Command="{Binding RefreshCommand}" />

            <Button Content="Szerkesztés" Height="20" Width="80" Margin="10,0" Command="{Binding ShowBookingEditCommand}" />

        </StackPanel>

        <DataGrid Grid.Row="1"
              IsReadOnly="True"
              ItemsSource="{Binding Bookings}"
              SelectedItem="{Binding SelectedBooking, Mode=TwoWay}"
              AutoGenerateColumns="False"
              CanUserAddRows="False"
              CanUserDeleteRows="False"
              CanUserReorderColumns="False"
              HeadersVisibility="Column">

            <DataGrid.Columns>
                <DataGridTextColumn Header="Id" Binding="{Binding Id}" Width="Auto" />
                <DataGridTextColumn Header="Kezdés dátuma" Binding="{Binding StartDate}" Width="Auto" />
                <DataGridTextColumn Header="Befejezés dátuma" Binding="{Binding EndDate}" Width="Auto" />
                <DataGridTextColumn Header="Összeg" Binding="{Binding TotalPrice}" Width="Auto" />
                <DataGridTextColumn Header="Fizetési azonosító" Binding="{Binding PaymentId}" Width="Auto" />
                <DataGridTextColumn Header="Állapot" Binding="{Binding Status}" Width="Auto" />
                <DataGridTextColumn Header="Létrehozva" Binding="{Binding CreatedAt}" Width="*" />
            </DataGrid.Columns>

            <DataGrid.RowStyle>
                <Style TargetType="DataGridRow">
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding IsOverdue}" Value="True">
                            <Setter Property="Background" Value="MediumVioletRed" />
                            <Setter Property="Foreground" Value="WhiteSmoke" />
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </DataGrid.RowStyle>

        </DataGrid>

    </Grid>

</UserControl>
