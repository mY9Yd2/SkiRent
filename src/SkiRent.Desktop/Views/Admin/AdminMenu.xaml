<UserControl x:Class="SkiRent.Desktop.Views.Admin.AdminMenu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:SkiRent.Desktop.Views.Admin"
             xmlns:vm="clr-namespace:SkiRent.Desktop.ViewModels.Admin"
             d:DataContext="{d:DesignInstance vm:AdminMenuViewModel}"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="200">

    <StackPanel Background="WhiteSmoke">

        <Label Content="SkiRent" FontSize="28" HorizontalAlignment="Center" Margin="0,10,0,30" />

        <StackPanel Margin="10,0">

            <Button Content="Felszerelések" Command="{Binding ShowEquipmentsCommand}" Margin="0,0,0,15" />
            <Button Content="Felszerelés kategóriák" Command="{Binding ShowEquipmentCategoriesCommand}" Margin="0,0,0,15" />
            <Button Content="Foglalások" Command="{Binding ShowBookingsCommand}" Margin="0,0,0,15" />
            <Button Content="Számlák" Command="{Binding ShowInvoicesCommand}" Margin="0,0,0,15" />

        </StackPanel>

    </StackPanel>

</UserControl>
